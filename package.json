{
  "name": "vibe-rtc",
  "version": "0.0.0",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@10.21.0",
  "scripts": {
    "install:all": "pnpm install -w --frozen-lockfile",
    "build:libs": "pnpm -r --filter @vibe-rtc/rtc-core --filter @vibe-rtc/rtc-firebase run build",
    "build:pkg": "pnpm --filter vibe-rtc-common run build",
    "build:all": "pnpm run build:libs && pnpm run build:pkg",
    "test:int": "pnpm --filter @vibe-rtc/rtc-firebase run test",
    "test:e2e": "pnpm --filter @vibe-rtc/rtc-e2e run test",
    "show-report": "pnpm --filter @vibe-rtc/rtc-e2e run show-report",
    "format": "biome format --write ./packages/**/* --verbose",
    "dev:pkgs": "pnpm -w --parallel --filter @vibe-rtc/* run build:watch",
    "lint": "biome lint",
    "changeset": "changeset",
    "changeset:status": "changeset status",
    "version-packages": "changeset version",
    "release:tag": "changeset tag",
    "release": "changeset publish"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@biomejs/biome": "2.3.2",
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "rxjs": "^7.8.2"
  }
}
