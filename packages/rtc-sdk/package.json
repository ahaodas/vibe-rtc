{
    "name": "@vibe-rtc/sdk",
    "version": "0.0.0",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./core": {
            "types": "./dist/core.d.ts",
            "import": "./dist/core.js",
            "require": "./dist/core.cjs"
        },
        "./react": {
            "types": "./dist/react.d.ts",
            "import": "./dist/react.js",
            "require": "./dist/react.cjs"
        },
        "./firebase": {
            "types": "./dist/firebase.d.ts",
            "import": "./dist/firebase.js",
            "require": "./dist/firebase.cjs"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "sideEffects": false,
    "scripts": {
        "build": "tsup src/index.ts src/core.ts src/react.ts src/firebase.ts --dts --format esm,cjs --clean",
        "test": "echo \"(no tests)\""
    },
    "dependencies": {
        "@vibe-rtc/rtc-core": "workspace:^",
        "@vibe-rtc/rtc-firebase": "workspace:^",
        "@vibe-rtc/rtc-react": "workspace:^"
    }
}
